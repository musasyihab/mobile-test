<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/timelineItemLayout"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="#e5e5e5"
            android:layout_centerInParent="true"></LinearLayout>

        <ProgressBar
            android:id="@+id/timelineType"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:max="1000"
            android:progress="999"
            android:progressDrawable="@drawable/circular_progress_green"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/timelineTime"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="1pm - 2pm"
            android:textColor="#555"
            android:gravity="center|left"
            android:padding="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="8"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp">

        <TextView
            android:id="@+id/timelineTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Icons"
            android:textSize="18sp"
            android:textColor="#555"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/timelineDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mobile App"
            android:layout_marginBottom="5dp"
            android:textSize="14sp"
            android:textColor="#555"/>

        <LinearLayout
            android:id="@+id/timelineColabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/timelineColabPic"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ava"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ava"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ava"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ava"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ava"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>